{
  "name": "my-code-time-tracker",
  "displayName": "Code clock tracker",
  "publisher": "Codeclocktrack",
  "description": "A VS Code extension to track coding time with charts and a status bar clock.",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:code-time-tracker.showWidget"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-time-tracker.showWidget",
        "title": "Show Code Time Tracker"
      }
    ]
  },
  "scripts": {
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "vscode:prepublish": "npm run compile -- --production",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/vscode": "^1.60.0",
    "esbuild": "^0.14.0",
    "typescript": "^4.4.4",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "chart.js": "^4.4.8",
    "framer-motion": "^11.18.2",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Hiteshydv001/CodeClock.git"
  },
  "author": {
    "name": "Hitesh Kumar",
    "email": "hiteshofficial0001@gmail.com"
  },
  "license": "MIT",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1e293b",
    "theme": "dark"
  },
  "keywords": [
    "time tracking",
    "coding",
    "productivity",
    "charts"
  ],
  "badges": [
    {
      "url": "https://img.shields.io/badge/version-0.0.1-blue.svg",
      "href": "https://marketplace.visualstudio.com/items?itemName=Codeclocktrack.my-code-time-tracker",
      "description": "Version"
    }
  ]
}
